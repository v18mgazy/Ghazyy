    // تنفيذ تحديث الفاتورة
    updateInvoiceMutation.mutate({
      invoiceId: invoiceToEdit.id,
      customerId: editedCustomerId,
      discount: editedDiscount,
      paymentMethod: editedPaymentMethod,
